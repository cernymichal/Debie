@model OrderContactForm
@{
  ViewData["Title"] = "Customer Information";
  Layout = "_CheckoutLayout";
}

<div id="crumbs">
  <a asp-action="Index">Cart</a> <i class="fa-fw fas fa-chevron-right mx-1"></i>
  <a>Information</a> <i class="fa-fw fas fa-chevron-right mx-1"></i>
  <a class="text-muted">Shipping</a> <i class="fa-fw fas fa-chevron-right mx-1"></i>
  <a class="text-muted">Payment</a>
</div>

<form asp-action="ContactUpdate" method="POST">
  <div>
    <h4>Contact information</h4>

    <input asp-for="Email" class="form-control" placeholder="Email" type="email" />
    
    <input asp-for="Updates" placeholder="Updates" id="form-input-updates" />
    <label class="form-label ms-2" for="form-input-updates"> Keep me up to date on news and exlusive offers</label>
  </div>

  <div>
    <h4>Shipping address</h4>

    <div class="d-flex">
      <input asp-for="FirstName" class="form-control" placeholder=" First name (optional)" />
      <input asp-for="LastName" class="form-control" placeholder="Last name" />
    </div>

    <input asp-for="ShippingStreet" class="form-control" placeholder="Address" />

    <input asp-for="ShippingApartment" class="form-control" placeholder="Apartment, suite, etc. (optional)" />

    <input asp-for="ShippingCity" class="form-control" placeholder="City" />

    <div class="d-flex">
      <input asp-for="ShippingCountry" class="form-control" placeholder="Country / region" />
      <input asp-for="ShippingZip" class="form-control" placeholder="Postal code" />
    </div>
  </div>

  <button type="submit" class="my-button-big">Continue to shipping</button>

  <span asp-validation-for="Email" class="text-danger"></span>
  <span asp-validation-for="Updates" class="text-danger"></span>
  <span asp-validation-for="FirstName" class="text-danger"></span>
  <span asp-validation-for="LastName" class="text-danger"></span>
  <span asp-validation-for="ShippingStreet" class="text-danger"></span>
  <span asp-validation-for="ShippingApartment" class="text-danger"></span>
  <span asp-validation-for="ShippingCity" class="text-danger"></span>
  <span asp-validation-for="ShippingCountry" class="text-danger"></span>
  <span asp-validation-for="ShippingZip" class="text-danger"></span>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}