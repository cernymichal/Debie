@model Feedback

@{
  ViewData["Header"] = "Contact";
  ViewData["Title"] = ViewData["Header"];
  ViewData["Crumbs"] = new Crumb[] {
    new Crumb("Page", "Contact", "Contact")
  };
}

@section Head {
  <link rel="stylesheet" href="/css/contact.css">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A==" crossorigin=""/>
}

<div class="row my-5">
  <form asp-action="Contact" method="POST" class="col-md-7" id="contact-form">
    <h1 class="mb-4">Tell Us What You Think</h1>
    <div class="mb-3">
      <label class="form-label" asp-for="Name">Your name <span>*</span></label>
      <span asp-validation-for="Name" class="text-danger"></span>
      <input type="name" class="form-control" id="input-name" asp-for="Name" placeholder="Full Name">
    </div>
    <div class="mb-3">
      <label class="form-label" asp-for="Email">Your Email <span>*</span></label>
      <span asp-validation-for="Email" class="text-danger"></span>
      <input type="email" class="form-control" id="input-email" asp-for="Email" placeholder="Email Address">
    </div>
    <div class="mb-3">
      <label class="form-label" asp-for="Subject">Subject</label>
      <span asp-validation-for="Subject" class="text-danger"></span>
      <input type="text" class="form-control" asp-for="Subject" id="input-subject" placeholder="Subject">
    </div>
    <div class="mb-3">
      <label class="form-label" asp-for="Message">Your Message <span>*</span></label>
      <span asp-validation-for="Message" class="text-danger"></span>
      <textarea class="form-control" id="input-message" asp-for="Message" rows="5" required placeholder="Message"></textarea>
    </div>
    <button type="submit" class="my-button">Send Message</button>
  </form>

  <div class="col-md-5" id="contact-us">
    <div class="p-4 bg-light">
      <h1 class="mb-4">Contact Us</h1>
      <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Nulla modi fugiat nesciunt, similique impedit quo
        placeat perspiciatis nihil asperiores! Est labore repellat sint adipisci quia cumque corrupti vitae, atque
        placeat?</p>

      <h2 class="mt-4"><i class="fas fa-building"></i>Address</h2>
      <p>123 Main Street, New York, NY</p>
      <hr>
      <h2><i class="fas fa-phone"></i>Phone</h2>
      <p>
        Mobile: <a href="tel:123456789">123 456 789</a><br>
        Hotline: <a href="tel:123456789">123 456 789</a>
      </p>
      <hr>
      <h2><i class="fas fa-envelope"></i>Email</h2>
      <p>
        <a href="mailto:example@example.com">example@example.com</a><br>
        <a href="mailto:example@example.com">example@example.com</a>
      </p>
    </div>
  </div>
</div>

@section Outside {
  <div id="contact-map" class="my-2"></div>
}
 
@section Scripts {
  <partial name="_ValidationScriptsPartial" />
  <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js" integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA==" crossorigin=""></script>
  <script src="/js/contact.js"></script>
}